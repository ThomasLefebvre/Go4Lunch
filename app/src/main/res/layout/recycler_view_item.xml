<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@mipmap/ic_launcher_go_round"
                android:scaleType="centerCrop"

                android:id="@+id/photoPlace" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewName" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textViewAddress" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewOpenHours" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewOpenHours"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.55"
            android:orientation="vertical"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDistance" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/photoPlace"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_people_black_24dp"
            android:id="@+id/imageViewWorkmates" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDistance" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageStar1"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageStar2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageStar1" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageStar3"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageStar2"/>
</androidx.constraintlayout.widget.ConstraintLayout>